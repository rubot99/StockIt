@{
    ViewData["Title"] = "Home Page";
    int index = 0;
}
@model IEnumerable<StockIt.Core.Repositories.Product.Product>

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Barcode</th>
                <th>Tags</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@(index + 1)</th>
                    <td>@item.Barcode</td>
                    <td>@item.Name</td>
                    <td>@string.Join(',', item.Tags)</td>
                    <td>
                        <button type="button" class="btn btn-primary float-left"><i class="fas fa-pen"></i></button>
                        &nbsp;
                        <button type="button" class="btn btn-primary"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
