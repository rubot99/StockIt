@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<StockIt.Core.Repositories.Product.Product>

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Barcode</th>
                <th>Tags</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@item.Barcode</td>
                    <td>@item.Name</td>
                    <td>@string.Join(',', item.Tags)</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
