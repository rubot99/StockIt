@page "/tenants"
@inherits TenantListBase
<h3>Tenant List</h3>


@if (tenants == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-primary float-right"><i class="fas fa-plus-circle"></i></button>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tenant in tenants)
                        {
                            <tr>
                                <td>@tenant.Id</td>
                                <td>@tenant.Name</td>
                                <td>
                                    <i class="fas fa-pen"></i>
                                </td>
                                <td>
                                    <i class="fas fa-trash"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
                }
