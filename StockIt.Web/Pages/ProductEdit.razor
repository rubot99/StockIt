@page "/product"
@page "/product/{ProductId}"
@inherits ProductEditBase

<div class="entity-edit">
    <h1 class="page-title">Add New Product</h1>

    <EditForm Model="@Product" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group row">
            <label for="Barcode" class="col-sm-3">Barcode: </label>
            <InputText id="Barcode" class="form-control col-sm-8" @bind-Value="@Product.Barcode" placeholder="Enter Barcode"></InputText>
        </div>
        <div class="form-group row">
            <label for="Name" class="col-sm-3">Name: </label>
            <InputText id="Name" class="form-control col-sm-8" @bind-Value="@Product.Name" placeholder="Enter Name"></InputText>
        </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-3">Description: </label>
            <InputTextArea id="Description" class="form-control col-sm-8" @bind-Value="@Product.Description" placeholder="Enter Description"></InputTextArea>
        </div>
        <div class="form-group row">
            <label for="Tags" class="col-sm-3">Tags: </label>
            <InputTextArea id="Tags" class="form-control col-sm-8" @bind-Value="@Tags" placeholder="Enter Tags"></InputTextArea>
        </div>
        <div class="form-group row">
            <hr />
        </div>
        <div class="form-group row">
            <div class="col"></div></div>
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Location</th>
                            <th>Location</th>
                            <th>Location</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var location in locations)
                        {
                            <tr>
                                <td>@location.Name</td>
                                <td>
                                    <button type="button" class="btn btn-primary" @onclick="() => EditItem(location.Id)"><i class="fas fa-pen"></i></button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" @onclick="() => DeleteItem(location.Id)"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
