@page "/products"
@inherits ProductListBase

<h3>Product List</h3>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-primary float-right" @onclick="() => AddItem()"><i class="fas fa-plus-circle"></i></button>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Barcode</th>
                            <th>Tags</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in products)
                        {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Barcode</td>
                            <td>@string.Join(',',product.Tags)</td>
                            <td>
                                <button type="button" class="btn btn-primary float-left" @onclick="() => EditItem(product.Id)"><i class="fas fa-pen"></i></button>
                                &nbsp;
                                <button type="button" class="btn btn-primary" @onclick="() => DeleteItem(product.Id)"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
}