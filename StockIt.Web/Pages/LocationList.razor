@page "/locations"
@inherits LocationListBase

<h3>Locations</h3>

@if (locations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-primary float-right" @onclick="() => AddItem()"><i class="fas fa-plus-circle"></i></button>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var location in locations)
                        {
                        <tr>
                            <td>@location.Name</td>
                            <td>@location.Description</td>
                            <td>
                                <button type="button" class="btn btn-primary float-left" @onclick="() => EditItem(location.Id)"><i class="fas fa-pen"></i></button>
                                &nbsp;
                                <button type="button" class="btn btn-primary" @onclick="() => DeleteItem(location.Id)"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
